{
    "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedPrivateClassMembers": "off",
                "noUnusedFunctionParameters": "off"
            },
            "style": {
                "useImportType": "off",
                "noInferrableTypes": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        },
        "formatter": {
            "enabled": true
        }
    }
}