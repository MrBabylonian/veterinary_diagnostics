{
	"extends": "@workspace/configuration/tsconfig/base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"dist/types/**/*.ts",
		"dist/dev/types/**/*.ts",
		"**/*.mts"
	],
	"exclude": ["node_modules"]
}
