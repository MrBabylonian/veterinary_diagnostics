{
	"extends": "@workspace/configuration/tsconfig/base.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolvePackageJsonExports": true,
		"target": "ES2023",
		"lib": ["ES2023"],
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"noEmit": false,
		"composite": false,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*", "database"],
	"exclude": ["node_modules", "dist"]
}
